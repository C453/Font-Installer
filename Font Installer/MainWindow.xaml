        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Font_Installer"
        mc:Ignorable="d"
        Title="Font Installer" Height="350" Width="525">
    <Grid>
        <Button x:Name="ImportFontsBtn" Content="Import Fonts" HorizontalAlignment="Left" Margin="404,284,0,0" VerticalAlignment="Top" Width="103" Click="ImportFontsBtn_Click"/>
